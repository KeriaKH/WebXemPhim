{
    "projects": [
      {
        "src": "./my-app/package.json",
        "use": "@vercel/static-build",
        "config": {
          "distDir": "build"
        }
      },
      {
        "src": "./backend/api.js",
        "use": "@vercel/node"
      }
    ],
    "rewrites": [
      { "source": "/api/(.*)", "destination": "/api.js" }
    ]
  }